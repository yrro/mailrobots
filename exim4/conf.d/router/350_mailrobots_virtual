virtual_account:
    debug_print = "R: virtual_account for $local_part$local_part_suffix@$domain"

    no_more

    local_part_suffix = virtual_local_part_suffix
    local_part_suffix_optional
    domains = +virtual_domains
    local_parts = ! +virtual_local_parts_ignore

    driver = accept
    transport = dovecot

